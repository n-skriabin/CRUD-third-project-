<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/styles")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <script type="text/javascript" src="~/Scripts/src/dist/inline.bundle.js"></script>
    <script type="text/javascript" src="~/Scripts/src/dist/polyfills.bundle.js"></script>
    <script type="text/javascript" src="~/Scripts/src/dist/styles.bundle.js"></script>
    <script type="text/javascript" src="~/Scripts/src/dist/vendor.bundle.js"></script>
    <script type="text/javascript" src="~/Scripts/src/dist/main.bundle.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
